<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ListPreference
        app:key="calendar_rows"
        app:title="Calendar rows"
        app:entries="@array/settings_calendar_rows_array"
        app:entryValues="@array/settings_calendar_rows_array_values"
        app:defaultValue="-1"
        app:useSimpleSummaryProvider="true" />

    <CheckBoxPreference
        app:key="badge_enabled"
        app:title="Show badge"
        app:summary="Display an indicator if a date has multiple entries"
        android:defaultValue="true"
        />

    <PreferenceCategory>

        <Preference
            app:key="import_setting"
            app:title="Import data"
            app:summary="Import previously exported data" />

        <Preference
            app:key="export_setting"
            app:title="Export data"
            app:summary="Export data to device" />

    </PreferenceCategory>

</PreferenceScreen>